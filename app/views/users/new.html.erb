<h1>Register</h1>

<%= form_with model: @user do |form| %>
  <div>
    <%= form.label :username, 'Username:' %>
    <%= form.text_field :username, placeholder: 'Johndoe' %>
    <% @user.errors.full_messages_for(:username).each do |msg| %>
    <div><%= msg %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :email, 'Email:' %>
    <%= form.email_field :email, placeholder: 'johndoe@email.com' %>
    <% @user.errors.full_messages_for(:email).each do |msg| %>
    <div><%= msg %></div>
    <% end %>
  </div>
  
  <div>
    <%= form.label :password, 'Password:' %>
    <%= form.password_field :password %>
    <% @user.errors.full_messages_for(:password).each do |msg| %>
    <div><%= msg %></div>
    <% end %>
  </div>

  <div>
    <%= form.submit 'Submit' %>
  </div>

<% end %>
